import pygame
import sys

pygame.init()

# Установка размеров окна
screen = pygame.display.set_mode((800, 600))
pygame.display.set_caption("Меню игры")

# Загрузка изображения фона
background = pygame.image.load("background.jpg")

# Цвета
WHITE = (255, 255, 255)
BLACK = (0, 0, 0)
GRAY = (200, 200, 200)

# Шрифты
font = pygame.font.Font(None, 36)

class Button:
    def __init__(self, text, x, y, width, height):
        self.text = text
        self.rect = pygame.Rect(x, y, width, height)

    def draw(self):
        pygame.draw.rect(screen, GRAY, self.rect)
        draw_text(self.text, font, BLACK, self.rect.x + 10, self.rect.y + 10)

    def is_clicked(self, pos):
        return self.rect.collidepoint(pos)

class ExitButton(Button):
    def __init__(self, text, x, y, width, height):
        super().__init__(text, x, y, width, height)

    def handle_click(self):
        print("До встречи!")
        pygame.quit()
        sys.exit()

class SettingsButton(Button):
    def __init__(self, text, x, y, width, height):
        super().__init__(text, x, y, width, height)

    def handle_click(self):
        print("Открытие меню настроек...")
        #  открытия меню настроек и вывода настроек яркости и языка

def draw_text(text, font, color, x, y):
    text_surface = font.render(text, True, color)
    screen.blit(text_surface, (x, y))

def main_menu():
    play_button = Button("Играть", 300, 200, 200, 50)
    settings_button = SettingsButton("Настройки", 280, 250, 240, 50)
    exit_button = ExitButton("Выход", 300, 300, 200, 50)

    while True:
        screen.blit(background, (0, 0))  # Отображение фона

        play_button.draw()
        settings_button.draw()
        exit_button.draw()

        for event in pygame.event.get():
            if event.type == pygame.QUIT:
                pygame.quit()
                sys.exit()
            elif event.type == pygame.MOUSEBUTTONDOWN:
                pos = pygame.mouse.get_pos()
                if play_button.is_clicked(pos):
                    print("Нажата кнопка Играть")
                elif settings_button.is_clicked(pos):
                    settings_button.handle_click()
                elif exit_button.is_clicked(pos):
                    exit_button.handle_click()

        pygame.display.update()

if __name__ == '__main__':
    main_menu()
